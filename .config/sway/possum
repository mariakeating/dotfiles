output DP-1 scale 2 subpixel rgb pos 0 0
output HDMI-A-1 transform 90 subpixel vbgr pos 1920 0

input type:pointer
{
    accel_profile flat
    pointer_accel 0
}

bindsym $mod+greater move workspace to output right
bindsym $mod+less move workspace to output left

bindsym $mod+z output DP-1 scale 2
bindsym $mod+Shift+z output DP-1 scale 1

workspace 9 output HDMI-A-1
workspace 10 output HDMI-A-1

for_window [app_id="pinentry-qt$"] floating enable
